.form-group
  = f.label :name
  = f.text_field :name, class: "form-control"
.form-group
  = f.label :duration, "Duration (minutes)"
  = f.number_field :duration, class: "form-control"
.form-group
  = f.label :description
  = f.text_area :description, rows: 10, class: "form-control"
.form-actions
  = f.submit "Save", class: "btn btn-primary"
