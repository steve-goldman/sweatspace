%h3< Class Templates
- if @class_templates.any?
  %table.table
    %tbody
      - @class_templates.each do |class_template|
        %tr
          %td= class_template.name
          %td= class_template.display_clazz_type
          %td= class_template.display_duration
          %td= class_template.description
          %td= link_to "Edit", edit_admin_class_template_path(class_template)
- else
  %p< No classes
= link_to "Create", new_admin_class_template_path, class: "btn btn-primary"
