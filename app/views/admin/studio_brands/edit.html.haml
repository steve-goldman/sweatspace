= render partial: "shared/errors_for", locals: { object: @studio_brand }
%p
  = link_to admin_studio_brands_path, class: "btn btn-default" do
    %span
      %i.glyphicon.glyphicon-arrow-left
.panel.panel-default
  .panel-heading
    .panel-title< Studio Brand Details
  .panel-body
    = form_for @studio_brand, url: { action: :update} do |f|
      = render partial: "form_fields", locals: { f: f }
.panel.panel-default
  .panel-heading
    .panel-title< Associated Studios
  = render partial: "studio_list"
  .panel-footer
    = form_for :studio_brand_studio, url: admin_studio_brand_studios_path, method: :post do |f|
      = render partial: "studio_form_fields", locals: { f: f }
.panel.panel-default
  .panel-heading
    .panel-title< Associated Class Templates
  = render partial: "class_template_list"
