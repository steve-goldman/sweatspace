= render partial: "shared/errors_for", locals: { object: @clazz }
= link_to previous_wizard_path, class: "btn btn-default" do
  %span
    %i.glyphicon.glyphicon-arrow-left
%h3< Select the studio
= form_for @clazz, url: wizard_path, method: :patch do |f|
  .form-group
    = f.select :studio_id, class_template_studio_options(@clazz.class_template), {}, class: "submit-on-change form-control", autofocus: true
  = f.submit "Next", class: "btn btn-primary form-control"

:javascript
  new SubmitOnChange();
