%h3< Select the time
= form_for @clazz, url: wizard_path, method: :patch do |f|
  .form-group
    = f.label :class_time
    = f.text_field :class_time, class: "form-control", id: "timepicker", readonly: true, autofocus: true
  .form-actions
    = f.submit "Next", class: "btn btn-primary"

:javascript
  $(document).ready(function() {
    $('#timepicker').pickatime({
      clear: "",
      interval: 5,
      min: [5, 0],
      max: [22, 0],
      format: "hh:i A"
    });
  });
