.form-group
  = f.label :studio_id, "Studio"
  = f.select :studio_id, studio_options, class: "form-control"
.form-group
  = f.label :time
  = f.text_field :time, class: "form-control", id: "datetimepicker"
.form-group
  = f.label :duration
  = f.text_field :duration, class: "form-control"
= f.submit "Save", class: "btn btn-primary"

:javascript
  $('#datetimepicker').datetimepicker({
    format: "YYYY-MM-DD h:mm A"
  });
