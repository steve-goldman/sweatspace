.studio-address
  %div
    = link_to @clazz.studio_url, class: "btn btn-primary", target: "_blank" do
      = @clazz.display_studio
      %span
        %i.glyphicon.glyphicon-new-window
  - if @clazz.studio.address_1?
    %div= @clazz.studio.address_1
  - if @clazz.studio.address_2?
    %div= @clazz.studio.address_2
  - if @clazz.studio.address_3?
    %div= @clazz.studio.address_3
