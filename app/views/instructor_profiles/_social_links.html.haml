.social-links
  - if @instructor_profile.facebook_link
    = social_link :facebook, @instructor_profile, @is_owner do
      %span.fa.fa-facebook
  - if @instructor_profile.instagram_link
    = social_link :instagram, @instructor_profile, @is_owner do
      %span.fa.fa-instagram
  - if @instructor_profile.twitter_link
    = social_link :twitter, @instructor_profile, @is_owner do
      %span.fa.fa-twitter
  - if @instructor_profile.youtube_link
    = social_link :youtube, @instructor_profile, @is_owner do
      %span.fa.fa-youtube
  - if @is_owner && !@instructor_profile.any_social?
    = link_to "Social", edit_social_ids_path, remote: true, class: "btn btn-success"
