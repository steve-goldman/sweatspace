%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      = link_to "SweatSpace", root_path, class: "navbar-brand"
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        - if current_user.admin?
          = render partial: "layouts/navigation/admin"
        = render partial: "layouts/navigation/user"
      - else
        %li= link_to "Log In", user_omniauth_authorize_path(:instagram)
