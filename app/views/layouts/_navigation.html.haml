%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      = link_to "SweatSpace", root_path, class: "navbar-brand"
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li.dropdown
          = link_to "#", class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
            %span.glyphicon.glyphicon-user
            %span.caret
          %ul.dropdown-menu
            - if current_user.instructor_profile.present?
              %li= link_to "View Profile", profile_path(current_user.instructor_profile.profile_path)
              %li= link_to "Edit Profile", edit_instructor_profile_path(current_user.instructor_profile)
            - else
              %li= link_to "Create Profile", new_instructor_profile_path
            %li= link_to "Log Out", destroy_user_session_path, method: :delete
      - else
        %li= link_to "Sign Up", new_user_registration_path
        %li= link_to "Log In", new_user_session_path
