= form_for @instructor_profile, url: instructor_profile_path(@instructor_profile), method: :patch do |f|
  - if @instructor_profile.profile_photo?
    .form-group
      .profile-photo-preview= sweatspace_image @instructor_profile.profile_photo.scaled_full
      = f.check_box :remove_profile_photo
      Remove profile photo
  .form-group
    = f.file_field :profile_photo
  .form-actions
    = f.submit "Update", class: "btn btn-primary", data: { disable_with: "Please wait..." }
    = button_tag "Cancel", class: "btn btn-default", "data-dismiss" => "modal"
