= render partial: "shared/errors_for", locals: { object: @repeating_class }
.wizard-back-button
  = link_to previous_wizard_path, class: "btn btn-default" do
    %span
      %i.glyphicon.glyphicon-arrow-left
%h3< Please confirm these details
%table.table
  %tr
    %td
      %strong< Class
    %td= @repeating_class.name
  %tr
    %td
      %strong< Studio
    %td= @repeating_class.display_studio
  %tr
    %td
      %strong< Day of Week
    %td= @repeating_class.display_day_of_week
  %tr
    %td
      %strong< Time
    %td= @repeating_class.display_time
  %tr
    %td
      %strong< Duration
      %td
        - if @repeating_class.forever?
          Open ended
        - else
          = @repeating_class.display_number_of_weeks
= form_for @repeating_class, url: wizard_path, method: :patch do |f|
  = f.hidden_field :confirmed, value: true
  = f.submit "Confirm", class: "btn btn-primary form-control", data: { disable_with: "Working..." }
